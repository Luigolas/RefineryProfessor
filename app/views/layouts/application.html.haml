!!!
=  render "/refinery/html_tag"
- site_bar = render('/refinery/site_bar', :head => true)
%head
  = render "/refinery/head"
%body
  = site_bar
  .container#dialog_container
    .row
      .col-md-4.col-md-offset-8
        %ul#locale.nav.nav-pills
          = render 'refinery/locale'
    %header#header.row
      = render "refinery/header"
    .row
      .col-md-2#navbar_container
        .navbar
          - if Refinery::Customizations::Customization.first.image
            = image_tag Refinery::Customizations::Customization.first.image.url, :class => 'img-responsive img-rounded img-thumbnail'
          =# Refinery::Pages::MenuPresenter.new(refinery_menu_pages, self).to_html
          #sidebar.sidebar-offcanvas{role: "navigation"}
            = navigation_menu.to_html
      .col-md-10#main_page
        %section#page
          = yield
    %footer.row
      -#.col-md-4.col-md-offset-8
      = render "refinery/footer"
  = render "/refinery/javascripts"