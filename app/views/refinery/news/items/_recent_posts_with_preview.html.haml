%nav#recent_news_items
  %h1#body_content_title= t('refinery.news.items.recent_posts.recent_posts')
  %section#body
    - if @items.any?
      - @items.each do |item|
        %article.news_item_truncated
          %h2= link_to item.title, refinery.news_item_path(item)
          %p.date-published
            %small
              = t('refinery.news.items.index.published')
              = l(item.publish_date, :format => :long)
            = truncate  item.body, :length => 350,
            :omission => " ... <p>#{link_to t('refinery.news.items.index.read_more'),
            refinery.news_item_path(item)}</p>",
            :preserve_html_tags => true
    - else
      %p
        %em= t('refinery.news.items.no_items_yet')