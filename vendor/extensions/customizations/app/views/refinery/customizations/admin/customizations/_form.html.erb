<%= form_for [refinery, :customizations_admin, @customization] do |f| -%>
    <%= render '/refinery/admin/error_messages',
               :object => @customization,
               :include_object_name => true %>

    <div class='field'>
      <%= f.label :name -%>
      <%= f.text_field :name, :class => 'larger widest' -%>
    </div>

    <div class='field'>
      <%= f.label :desctiption -%>
      <%= f.text_field :desctiption -%>
    </div>

    <div class='field'>
      <%= f.label :image -%>
      <%= render :partial => "/refinery/admin/image_picker", :locals => {
              :f => f,
              :field => :image_id,
              :image => f.object.image,
              :toggle_image_display => false
      } %>
    </div>

    <%= render '/refinery/admin/form_actions', :f => f,
              :continue_editing => false,
              :hide_delete => true,
              :hide_cancel => true -%>
    <%# render '/refinery/admin/form_actions', :f => f,
               :continue_editing => false,
               :delete_title => t('delete', :scope => 'refinery.customizations.admin.customizations.customization'),
               :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @customization.name) -%>

<% end -%>
