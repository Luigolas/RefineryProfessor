= form_for [refinery, :customizations_admin, @customization] do |f|
  = render '/refinery/admin/error_messages', :object => @customization,
  :include_object_name => true
  = render '/refinery/admin/locale_picker',
    :current_locale => Globalize.locale
  .field
    = f.label :name
    = f.text_field :name, :class => 'larger widest'
  .field
    = f.label :desctiption
    = f.text_field :desctiption
  .field
    = f.label :image
    = render :partial => '/refinery/admin/image_picker',
      :locals => {:f => f,
                  :field => :image_id,
                  :image => f.object.image,
                  :toggle_image_display => false }
  = render '/refinery/admin/form_actions',
    :f => f, :continue_editing => false,
    :hide_delete => true,
    :hide_cancel => true
