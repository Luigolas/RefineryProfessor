- content_for :body_content_title do
  = @book.title
- content_for :body do
  %section
    %h1= t('.title')
    %p
      = raw @book.title
  %section
    %h1= t('.author')
    %p
      = raw @book.author
  %section
    %h1= t('.isbn')
    %p
      = raw @book.isbn
  %section
    %h1= t('.abstract')
    %p
      = raw @book.abstract
  %section
    %h1= t('.file')
    %p
      - if @book.file
        = link_to("Download", @book.file.url)
      - else
        = t('.no_file')
- content_for :side_body do
  %aside
    %h2= t('.other')
    %ul#books
      - @books.each do |book|
        %li
          = link_to book.title, refinery.books_book_path(book)
= render '/refinery/content_page'