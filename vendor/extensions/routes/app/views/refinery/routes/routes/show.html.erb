<% content_for :body_content_title do %>
  <%= @route.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @route.name %>
    </p>
  </section>
  <section>
    <h1>Region</h1>
    <p>
      <%=raw @route.region %>
    </p>
  </section>
  <section>
    <h1>Duration</h1>
    <p>
      <%=raw @route.duration %>
    </p>
  </section>
  <section>
    <h1>Authors</h1>
    <p>
      <%=raw @route.authors %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @route.description %>
    </p>
  </section>
  <section>
    <h1>Sections</h1>
    <p>
      <%=raw @route.sections %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="routes">
      <% @routes.each do |route| %>
        <li>
          <%= link_to route.name, refinery.routes_route_path(route) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
