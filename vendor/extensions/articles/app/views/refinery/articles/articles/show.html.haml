- content_for :body_content_title do
  = @article.title
- content_for :body do
  %section
    %h1= t('.title')
    %p
      = raw @article.title
  %section
    %h1= t('.authors')
    %p
      = raw @article.authors
  %section
    %h1= t('.reference')
    %p
      = raw @article.reference
  %section
    %h1= t('.abstract')
    %p
      = raw @article.abstract
  %section
    %h1= t('.file')
    %p
      - if not @article.file_id.blank?
        = link_to t('.download'), @article.file_id, :target => '_blank'
      - else
        = t('.no_file')
- content_for :side_body do
  %aside
    %h2= t('.other')
    %ul#articles
      - @articles.each do |article|
        %li
          = link_to article.title, refinery.articles_article_path(article)
= render '/refinery/content_page'